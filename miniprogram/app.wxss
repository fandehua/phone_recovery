/* 固定的底部按钮 */
.btn-box{
  height: 120rpx;
  width: 100vw;
  z-index: 99;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  box-shadow: 0px -1px 5px rgba(0, 0, 0, 0.1);
}
.btn-box > button {
  width: 90%;
  background-color: #e64340;
  color: #fff;
  font-weight: 300;
}
button[disabled] {
  color: #fff !important;
  background: #eeb1b0 !important;
}